@{
}
@using WebApplicationMVCRentalOfPremises.Models;
@model CustomerDetailsModel
<div class="text-center">
    <h2 class="display-3">Добавление докумннтов</h2>
</div>
<form asp-controller="Client" method="post" asp-action="AddDocument">
    <input type="hidden" asp-for="client_id" value="@Model.client_id" />
    <div class="form-control">
        <label asp-for="TYPE" class="form-label">Тип документа:</label>
        <input type="text" asp-for="TYPE" />
    </div>
    <div class="form-control">
        <label asp-for="MeaningOfThePropsNAME" class="form-label">Значение документа:</label>
        <input type="text" asp-for="MeaningOfThePropsNAME" />
    </div>
    <div class="form-control">
        <button type="submit" class="btn btn-success">Сохранить</button>
    </div>
</form>