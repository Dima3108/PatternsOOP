@{
}
@using WebApplicationMVCRentalOfPremises.Models;
@model AgreementModel
<div class="text-center">
	<h2 class="display-3">Сведения об аренде</h2>
</div>

<form method="post" asp-controller="Client" asp-action="FillInTheDetails">
	<input type="hidden" asp-for="CLIENT_ID" value="@Model.CLIENT_ID" />
	<input type="hidden" asp-for="OUTLEET_ID" value="@Model.OUTLEET_ID" />
	<div class="form-control">
		<label asp-for="DateStart" class="form-label">
			Дата заезда:
		</label>
		<input type="datetime" asp-for="DateStart"  />
		<span asp-validation-for="DateStart" class="text-danger"></span>
	</div>
	<div class="form-control">
		<label asp-for="DateStart" class="form-label">
			Дата выезда:
		</label>
		<input type="datetime" asp-for="DateStop" />
		<span asp-validation-for="DateStop" class="text-danger"></span>
	</div>
	<div class="form-control">
		<button type="submit" class="btn btn-close">Отправить</button>
	</div>
</form>