@{
}
@model OutleetModel?
@{
    if(Model is null)
    {
        <strong>Отсутвует указааная позиция</strong>
        return;
    }
}
<h2 class="display-3">Подробная информация</h2>
<div class="container">
    <div class="row">
        <div class="col">
            Инвертаный номер:
        </div>
        <div class="col">
            <i>
                @Model.InventoryNumber
            </i>
        </div>
    </div>
    @{
        var values = new object[]
          {
          Model.InventoryNumber,Model.NumberOfWindows,Model.AllocatedPowerKilowatts,
          Model.Storey,Model.Area,Model.RentalCostPerDay,(Model.PresenceOfAirConditioning==1?"Присутвует":"Отсутвует")
          };
        var names = new string[]
        {
            "Инвертарный номер","Число окон","Число выделенных киловатт",
            "Этаж","Площадь помещения","Стоимость аренды в день","Наличие кондиционера"
        };
        for(int i = 0; i < values.Count(); i++)
        {
           <div class="row">
               <div class="col">
               @names[i]
               </div>
               <div class="col">
                   :<i>@values[i]</i>
               </div>
           </div>
        }
    }
</div>